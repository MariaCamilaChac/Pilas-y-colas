package arbol;

public class Tree{
	
	Node_Tree root =null;
	
	
	public void Insert(Node_Tree newNode) {
		if (root == null) 
			root=newNode;
		else {
			
			Node_Tree temp = root;
			Node_Tree parent = root;
			
			while(temp != null) {
				if (temp.value<newNode.value)
					temp= temp.Tree_rigth;
				else
					temp=temp.Tree_left;
			}
			if (parent.value < newNode.value) 
				parent.Tree_rigth=newNode;
			else 
				parent.Tree_left=newNode;
		
		}
	}
	
	public void Delete(int Node){
		
		Node_Tree temp= root;	
		Node_Tree Value=Search(Node);
		
		
		if(Value.Tree_left != null && Value.Tree_rigth != null){
			do{	 
			temp = temp.Tree_left;
			}while (temp.Tree_left==null);
			
		}else
			if(Value.Tree_left == null && Value.Tree_rigth == null){
				Value=null;
				System.gc();
			}

		
		
	}
	
	public Node_Tree Search (int value) {
		
		Node_Tree temp= root;
		
		while (root != null) {
			
			if(temp.value==value) {
		
				break;
			}
			if (temp.value < value) 
				temp = temp.Tree_left;
			
			else
				temp = temp.Tree_rigth;
		}
		return temp;
	}

}
